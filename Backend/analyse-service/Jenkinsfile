pipeline {
    agent any

    environment {
        DOCKER_HOST = "tcp://localhost:2375"
    }

    tools {
        maven 'Maven-4.0.0'  // Make sure this is the exact Maven version installed on Jenkins
        jdk 'JDK17'  // Ensure that this JDK version exists on Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the main branch from your GitHub repository
                git branch: 'main', url: 'https://github.com/LaboratoryProject/Laboratory_Project.git'
            }
        }

        stage('Build') {
            steps {
                dir('Backend/analyse-service') {
                    // Build the Spring Boot app (skipping tests during the build stage)
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test Docker Connectivity') {
            steps {
                // Test if Docker is accessible with the configured environment
                sh 'docker ps'
            }
        }

        stage('Unit Tests') {
            steps {
                dir('Backend/analyse-service') {
                    // Run unit tests using Maven
                    sh 'mvn test'
                }
            }
            post {
                always {
                    // Archive JUnit test reports after running unit tests
                    junit 'Backend/analyse-service/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('Backend/analyse-service') {
                    // Execute integration tests (assuming profile is configured)
                    sh 'mvn verify -Pintegration-tests'
                }
            }
        }

        stage('E2E Tests') {
            steps {
                dir('Backend/analyse-service') {
                    // Run End-to-End tests using npm
                    sh 'npm install'
                    sh 'npm run e2e'
                }
            }
        }

        stage('Docker Test') {
            steps {
                script {
                    // Test if Docker is accessible with the configured environment
                    sh 'docker ps'
                }
            }
        }
    }

    post {
        always {
            // Archive any JAR artifacts built during the build stage
            archiveArtifacts artifacts: 'Backend/analyse-service/target/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Build was successful!'
        }
        failure {
            echo 'Build failed! Check the logs for details.'
        }
    }
}
